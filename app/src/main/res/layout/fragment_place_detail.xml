<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activities.DetailActivity"
    android:padding="@dimen/padding_place_detail">

    <TextView
        android:id="@+id/tv_place_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/place_detail_title_size"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        tools:text="Title" />


    <ImageView
        android:id="@+id/im_place"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_img_place_image"
        android:scaleType="centerCrop"
        tools:src="@drawable/machu_picchu"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_place_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/machu_picchu_description"
        android:textSize="@dimen/place_detail_description_size"/>

</LinearLayout>